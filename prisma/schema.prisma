generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================================
// Auth.js 必須モデル
// ============================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  // Nikki App 固有フィールド
  userName    String? @unique
  displayName String?
  bio         String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Auth.js リレーション
  accounts       Account[]
  sessions       Session[]
  authenticators Authenticator[]

  // Nikki App リレーション
  pieces Piece[]
  days   Day[]

  @@map("users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
  @@map("authenticators")
}

// ============================================================
// Nikki App ドメインモデル
// ============================================================

enum DayStatus {
  DRAFT
  PUBLISHED
}

model Piece {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  text String

  // Day への所属（後で束ねる）
  dayId    String?
  day      Day?    @relation(fields: [dayId], references: [id], onDelete: SetNull)
  position Int     @default(0)

  // 引用元（自己参照）
  originalPieceId String?
  originalPiece   Piece?  @relation("PieceOrigin", fields: [originalPieceId], references: [id], onDelete: SetNull)
  derivedPieces   Piece[] @relation("PieceOrigin")

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([userId])
  @@index([dayId, position])
  @@index([originalPieceId])
  @@index([createdAt])
  @@map("pieces")
}

// ============================================================
// Day & Hashtag
// ============================================================

model Day {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  date        DateTime  @db.Date
  status      DayStatus @default(DRAFT)
  publishedAt DateTime?
  title       String?

  pieces Piece[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@unique([userId, date])
  @@index([status, publishedAt])
  @@map("days")
}

model Hashtag {
  id   String @id @default(cuid())
  name String @unique

  createdAt DateTime @default(now())

  @@map("hashtags")
}
